<?xml version="1.0" encoding="utf-8"?>
<manifest package="de.miroit.deis"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <application
        android:name=".DEISApplication"
        android:allowBackup="true"
        android:icon="@mipmap/deis_logo_512_32"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MenuActivity"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name=".ErrorActivity"
            android:theme="@style/AppTheme.StartScreen"/>
        <activity
            android:name=".PDFnewActivity_"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name=".StartActivity"
            android:theme="@style/AppTheme.StartScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ImpressActivity">
        </activity>
        <activity
            android:name=".OpenExternalAppActivity"
            android:theme="@style/AppTheme.ActionBar">
        </activity>
        <activity
            android:name=".BackToHomeActivity"
            android:theme="@style/AppTheme.ActionBar">
        </activity>
    </application>

</manifest>